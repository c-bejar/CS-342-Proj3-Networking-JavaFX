<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="StartMenuController"
      prefHeight="400.0" prefWidth="600.0"
      alignment="CENTER" spacing="30"
      styleClass="background">

    <!--DO NOT DELETE fx:id for title label-->
    <!--Title Label-->
    <Label fx:id="reference" styleClass="title">Three Card Poker</Label>
    <!--VBox to hold titlescreen buttons-->
    <VBox spacing="10" alignment="CENTER" >
        <Button onAction="#handleSwitchToGamePlay" styleClass="start-menu-button">Begin</Button>
        <Button onAction="#handleExitGame" styleClass="start-menu-button">Exit</Button>
    </VBox>
</VBox>
