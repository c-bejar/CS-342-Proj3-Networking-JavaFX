<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ServerController"
      alignment="CENTER"
      styleClass="root">
    <HBox alignment="CENTER"
          spacing="25">
      <StackPane>
        <!--
          Information on specific clients will go here
          and will simply be moved to top or bottom depending
          on if they are being used or not (via code)
        -->
        <ScrollPane prefWidth="400"
                    prefHeight="575">
          <content>
            <VBox fx:id="clientsDisplay">
              <!--
                client buttons(?) will go here in code
                to display more info on each client thread
              -->
            </VBox>
          </content>
        </ScrollPane>
      </StackPane>
      <VBox alignment="CENTER"
            spacing="25">
        <Button text="Activate Server"
                fx:id="activateServer"
                onAction="#activateServerButton"/>
        <Label fx:id="clientsLabel"
               text="Clients Connected: 0"/>
        <ScrollPane prefWidth="350"
                    prefHeight="200">
          <content>
            <VBox fx:id="clientJoinLog">
              <!-- Labels for clients go here in code -->
            </VBox>
          </content>
        </ScrollPane>
      </VBox>
    </HBox>
</VBox>